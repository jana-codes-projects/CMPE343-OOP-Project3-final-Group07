<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cmpe343.fx.controller.OwnerController" styleClass="root">
   <stylesheets>
      <java.net.URL value="@../css/base.css" />
      <java.net.URL value="@../css/owner.css" />
   </stylesheets>
   <top>
      <HBox spacing="16.0" styleClass="header-panel" alignment="CENTER_LEFT">
         <Label text="Owner Dashboard" styleClass="h2"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="btn-outline">
            <graphic>
               <SVGPath content="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z" fill="#94a3b8"/>
            </graphic>
         </Button>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">
         <tabs>
            <Tab text="Dashboard" closable="false">
               <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                  <FlowPane fx:id="dashboardContainer" hgap="24.0" vgap="24.0" style="-fx-padding: 32;">
                     <!-- Module cards will be added here -->
                  </FlowPane>
               </ScrollPane>
            </Tab>
            <Tab fx:id="productsTab" text="Products" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Button text="New Product" onAction="#handleAddProduct" styleClass="btn-primary"/>
                     <Button text="Refresh" onAction="#handleRefreshProducts" styleClass="btn-outline"/>
                  </HBox>
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS" styleClass="split-pane">
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Product List" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="productsListContainer" styleClass="list-container">
                              <!-- Product list items will be loaded dynamically -->
                           </VBox>
                        </ScrollPane>
                     </VBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Product Details" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="productDetailContainer">
                              <StackPane style="-fx-padding: 40;">
                                  <Label text="Select a product to view details" styleClass="muted"/>
                              </StackPane>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab fx:id="loyaltyTab" text="Loyalty" closable="false">
                <VBox spacing="16.0" style="-fx-padding: 24;">
                    <HBox spacing="12.0" alignment="CENTER_LEFT">
                        <Label text="Loyalty Management" styleClass="h2"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Refresh Report" onAction="#handleRefreshLoyalty" styleClass="btn-outline"/>
                    </HBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;" VBox.vgrow="ALWAYS">
                         <ScrollPane fitToWidth="true" styleClass="edge-to-edge" VBox.vgrow="ALWAYS">
                             <VBox fx:id="loyaltyReportContainer" spacing="0"/>
                         </ScrollPane>
                     </VBox>
                </VBox>
            </Tab>
            <Tab fx:id="carriersTab" text="Carriers" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Button text="New Carrier" onAction="#handleAddCarrier" styleClass="btn-primary"/>
                     <Button text="Refresh" onAction="#handleRefreshCarriers" styleClass="btn-outline"/>
                  </HBox>
                  <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS" styleClass="split-pane">
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Carrier List" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="carriersListContainer" spacing="4.0" styleClass="list-container"/>
                        </ScrollPane>
                     </VBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Carrier Details" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="carrierDetailContainer" spacing="12.0">
                               <StackPane style="-fx-padding: 40;">
                                  <Label text="Select a carrier to view details" styleClass="muted"/>
                              </StackPane>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab fx:id="ordersTab" text="Orders" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Label fx:id="ordersCountLabel" text="All Orders" styleClass="h2"/>
                     <Region HBox.hgrow="ALWAYS"/>
                     <Button text="Refresh" onAction="#handleRefreshOrders" styleClass="btn-outline"/>
                  </HBox>
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS" styleClass="split-pane">
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Order List" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane" hbarPolicy="NEVER">
                           <VBox fx:id="ordersListContainer" spacing="4.0" styleClass="list-container"/>
                        </ScrollPane>
                     </VBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Order Details" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane" hbarPolicy="NEVER">
                           <VBox fx:id="orderDetailContainer" spacing="12.0">
                               <StackPane style="-fx-padding: 40;">
                                  <Label text="Select an order to view details" styleClass="muted"/>
                              </StackPane>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab fx:id="messagesTab" text="Messages" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Button text="Refresh" onAction="#handleRefreshMessages" styleClass="btn-outline"/>
                  </HBox>
                  <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS" styleClass="split-pane">
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Conversations" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="messagesListContainer" spacing="4.0" styleClass="list-container"/>
                        </ScrollPane>
                     </VBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Chat" styleClass="h3"/>
                        <VBox fx:id="messageDetailContainer" spacing="0" VBox.vgrow="ALWAYS">
                           <StackPane style="-fx-padding: 40;" VBox.vgrow="ALWAYS">
                                  <Label text="Select a conversation to start chatting" styleClass="muted"/>
                           </StackPane>
                        </VBox>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab fx:id="couponsTab" text="Coupons" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Button text="New Coupon" onAction="#handleAddCoupon" styleClass="btn-primary"/>
                     <Button text="Refresh" onAction="#handleRefreshCoupons" styleClass="btn-outline"/>
                  </HBox>
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS" styleClass="split-pane">
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Active Coupons" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="couponsListContainer" spacing="4.0" styleClass="list-container"/>
                        </ScrollPane>
                     </VBox>
                     <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                        <Label text="Coupon Details" styleClass="h3"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                           <VBox fx:id="couponDetailContainer" spacing="12.0">
                               <StackPane style="-fx-padding: 40;">
                                  <Label text="Select a coupon to edit" styleClass="muted"/>
                              </StackPane>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab fx:id="ratingsTab" text="Carrier Ratings" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <Label text="Carrier Performance" styleClass="h2"/>
                     <Region HBox.hgrow="ALWAYS"/>
                     <Button text="Refresh" onAction="#handleRefreshRatings" styleClass="btn-outline"/>
                  </HBox>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                     <VBox fx:id="ratingsContainer" spacing="16.0" styleClass="list-container"/>
                  </ScrollPane>
               </VBox>
            </Tab>

            <Tab fx:id="reportsTab" text="Reports" closable="false">
               <VBox spacing="16.0" style="-fx-padding: 24;">
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                       <Label text="Revenue Analysis" styleClass="h2"/>
                       <Region HBox.hgrow="ALWAYS"/>
                       <Button text="Generate Report" onAction="#handleGenerateReport" styleClass="btn-primary"/>
                  </HBox>
                  <VBox styleClass="card" VBox.vgrow="ALWAYS" style="-fx-padding: 16;"> 
                        <StackPane fx:id="chartContainer" VBox.vgrow="ALWAYS"/>
                  </VBox>
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

