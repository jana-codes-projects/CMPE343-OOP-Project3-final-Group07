<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cmpe343.fx.controller.LoginController"
           stylesheets="@/css/base.css"
           styleClass="root">

    <!-- Background -->
    <Pane styleClass="bg-gradient"/>

    <!-- Center card -->
    <VBox alignment="CENTER" spacing="16" maxWidth="420" styleClass="card">
        <padding>
            <Insets top="26" right="26" bottom="26" left="26"/>
        </padding>

        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Welcome back" styleClass="h1"/>
            <Label text="Sign in to continue to Gr7Project3" styleClass="sub"/>
        </VBox>

        <VBox spacing="10">
            <VBox spacing="6">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="e.g. ahmet.yilmaz" styleClass="field"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="field"/>
            </VBox>

        </VBox>

        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="btn-primary" maxWidth="Infinity"/>

        <HBox alignment="CENTER" spacing="12">
            <Hyperlink text="Forgot password?" styleClass="link"/>
            <Label text="•" styleClass="muted"/>
            <Hyperlink text="Exit" onAction="#handleExit" styleClass="link"/>
        </HBox>

        <Label text="© 2025 Gr7Project3" styleClass="footer"/>
    </VBox>

</StackPane>
