<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.CarrierController">
   <top>
      <HBox spacing="10.0" style="-fx-padding: 10;">
         <Label fx:id="usernameLabel" text="Carrier: " style="-fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Refresh" onAction="#handleRefresh"/>
         <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
      </HBox>
   </top>
   <center>
      <TabPane>
         <tabs>
            <Tab text="Available Orders">
               <VBox spacing="10.0" style="-fx-padding: 10;">
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
                     <VBox>
                        <Label text="Order List" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="availableOrdersListContainer" spacing="3.0" style="-fx-padding: 5;">
                              <!-- Available order list items will be loaded dynamically -->
                           </VBox>
                        </ScrollPane>
                     </VBox>
                     <VBox>
                        <Label text="Order Details" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="availableOrderDetailContainer" spacing="10.0" style="-fx-padding: 10;">
                              <Label text="Select an order from the list to view details" 
                                     style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 20;"/>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab text="My Orders">
               <VBox spacing="10.0" style="-fx-padding: 10;">
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
                     <VBox>
                        <Label text="Order List" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="myOrdersListContainer" spacing="3.0" style="-fx-padding: 5;">
                              <!-- My order list items will be loaded dynamically -->
                           </VBox>
                        </ScrollPane>
                     </VBox>
                     <VBox>
                        <Label text="Order Details" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="myOrderDetailContainer" spacing="10.0" style="-fx-padding: 10;">
                              <Label text="Select an order from the list to view details" 
                                     style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 20;"/>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
            <Tab text="Completed Orders">
               <VBox spacing="10.0" style="-fx-padding: 10;">
                  <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
                     <VBox>
                        <Label text="Order List" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="completedOrdersListContainer" spacing="3.0" style="-fx-padding: 5;">
                              <!-- Completed order list items will be loaded dynamically -->
                           </VBox>
                        </ScrollPane>
                     </VBox>
                     <VBox>
                        <Label text="Order Details" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                           <VBox fx:id="completedOrderDetailContainer" spacing="10.0" style="-fx-padding: 10;">
                              <Label text="Select an order from the list to view details" 
                                     style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 20;"/>
                           </VBox>
                        </ScrollPane>
                     </VBox>
                  </SplitPane>
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

