<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.cmpe343.fx.controller.CarrierController" styleClass="root">
   <stylesheets>
      <java.net.URL value="@../css/base.css" />
   </stylesheets>
   
   <top>
      <HBox spacing="16.0" styleClass="header-panel" alignment="CENTER_LEFT">
         <Label fx:id="usernameLabel" text="Carrier Portal" styleClass="h2"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Refresh" onAction="#handleRefresh" styleClass="btn-outline">
              <graphic>
               <SVGPath content="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" fill="#94a3b8"/>
            </graphic>
         </Button>
         <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="btn-outline">
              <graphic>
               <SVGPath content="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z" fill="#94a3b8"/>
            </graphic>
         </Button>
      </HBox>
   </top>
   
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">
         <tabs>
            <Tab text="Active Orders" closable="false">
               <VBox spacing="16" style="-fx-padding: 24;">
                   <SplitPane dividerPositions="0.4" styleClass="split-pane" VBox.vgrow="ALWAYS">
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="Available Orders" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="availableOrdersListContainer" spacing="4.0" styleClass="list-container"/>
                         </ScrollPane>
                      </VBox>
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="Order Details" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="availableOrderDetailContainer">
                                <StackPane style="-fx-padding: 40;">
                                  <Label text="Select an order to view details" styleClass="muted"/>
                                </StackPane>
                            </VBox>
                         </ScrollPane>
                      </VBox>
                   </SplitPane>
               </VBox>
            </Tab>
            
            <Tab text="My Orders" closable="false">
               <VBox spacing="16" style="-fx-padding: 24;">
                   <SplitPane dividerPositions="0.4" styleClass="split-pane" VBox.vgrow="ALWAYS">
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="Assigned Orders" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="myOrdersListContainer" spacing="4.0" styleClass="list-container"/>
                         </ScrollPane>
                      </VBox>
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="Order Details" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="myOrderDetailContainer">
                                <StackPane style="-fx-padding: 40;">
                                  <Label text="Select an order to view details" styleClass="muted"/>
                                </StackPane>
                            </VBox>
                         </ScrollPane>
                      </VBox>
                   </SplitPane>
               </VBox>
            </Tab>
            
            <Tab text="Delivered Orders" closable="false">
               <VBox spacing="16" style="-fx-padding: 24;">
                   <SplitPane dividerPositions="0.4" styleClass="split-pane" VBox.vgrow="ALWAYS">
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="History" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="completedOrdersListContainer" spacing="4.0" styleClass="list-container"/>
                         </ScrollPane>
                      </VBox>
                      <VBox spacing="8" styleClass="card" style="-fx-padding: 16;">
                         <Label text="Order Details" styleClass="h3"/>
                         <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <VBox fx:id="completedOrderDetailContainer">
                                <StackPane style="-fx-padding: 40;">
                                  <Label text="Select an order to view details" styleClass="muted"/>
                                </StackPane>
                            </VBox>
                         </ScrollPane>
                      </VBox>
                   </SplitPane>
               </VBox>
            </Tab>

            <Tab text="Messages" closable="false">
                <content>
                    <VBox spacing="16.0" style="-fx-padding: 24;">
                        <Label text="Chat with Owner" styleClass="h2"/>
                        <VBox styleClass="card" VBox.vgrow="ALWAYS" style="-fx-padding: 0;">
                            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane" style="-fx-padding: 16;">
                               <VBox fx:id="messagesListContainer" spacing="12.0"/>
                            </ScrollPane>
                            <HBox spacing="12" style="-fx-padding: 16; -fx-background-color: rgba(30, 41, 59, 1.0); -fx-background-radius: 0 0 16 16; -fx-border-width: 1 0 0 0; -fx-border-color: rgba(255,255,255,0.05);">
                               <TextField fx:id="messageInput" promptText="Type a message to the owner..." HBox.hgrow="ALWAYS" styleClass="field"/>
                               <Button text="Send" onAction="#handleSendMessage" styleClass="btn-primary"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </content>
            </Tab>
   </tabs>
   </TabPane>
   </center>
</BorderPane>
