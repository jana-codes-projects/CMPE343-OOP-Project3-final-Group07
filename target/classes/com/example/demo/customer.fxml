<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.CustomerController">
   <top>
      <HBox spacing="10.0" style="-fx-padding: 10;">
         <Label fx:id="usernameLabel" text="User: " style="-fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button fx:id="cartButton" text="Shopping Cart" onAction="#handleViewCart"/>
         <Button fx:id="ordersButton" text="My Orders" onAction="#handleViewOrders"/>
         <Button fx:id="messagesButton" text="Messages" onAction="#handleMessages"/>
         <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         
         <HBox spacing="10.0">
            <TextField fx:id="searchField" promptText="Search products..." HBox.hgrow="ALWAYS"/>
            <Button text="Search" onAction="#handleSearch"/>
         </HBox>
         
         <TabPane fx:id="productTabs">
            <tabs>
               <Tab text="Vegetables">
                  <VBox spacing="10.0" style="-fx-padding: 10;">
                     <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
                        <VBox>
                           <Label text="Product List" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                           <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                              <VBox fx:id="vegetablesListContainer" spacing="3.0" style="-fx-padding: 5;">
                                 <!-- Vegetable list items will be loaded dynamically -->
                              </VBox>
                           </ScrollPane>
                        </VBox>
                        <VBox>
                           <Label text="Product Details" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                           <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                              <VBox fx:id="vegetablesDetailContainer" spacing="10.0" style="-fx-padding: 10;">
                                 <Label text="Select a product from the list to view details and add to cart" 
                                        style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 20;"/>
                              </VBox>
                           </ScrollPane>
                        </VBox>
                     </SplitPane>
                  </VBox>
               </Tab>
               <Tab text="Fruits">
                  <VBox spacing="10.0" style="-fx-padding: 10;">
                     <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
                        <VBox>
                           <Label text="Product List" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                           <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                              <VBox fx:id="fruitsListContainer" spacing="3.0" style="-fx-padding: 5;">
                                 <!-- Fruit list items will be loaded dynamically -->
                              </VBox>
                           </ScrollPane>
                        </VBox>
                        <VBox>
                           <Label text="Product Details" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5;"/>
                           <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                              <VBox fx:id="fruitsDetailContainer" spacing="10.0" style="-fx-padding: 10;">
                                 <Label text="Select a product from the list to view details and add to cart" 
                                        style="-fx-font-size: 14px; -fx-text-fill: gray; -fx-padding: 20;"/>
                              </VBox>
                           </ScrollPane>
                        </VBox>
                     </SplitPane>
                  </VBox>
               </Tab>
            </tabs>
         </TabPane>
      </VBox>
   </center>
</BorderPane>

