<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.MessagesController">
   <top>
      <HBox spacing="10.0" style="-fx-padding: 10;">
         <Label text="Messages to Owner" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
         <Button fx:id="closeButton" text="Close" onAction="#handleClose"/>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.7" orientation="VERTICAL">
         <items>
            <VBox VBox.vgrow="ALWAYS">
               <Label text="Message History" style="-fx-font-weight: bold; -fx-padding: 10;"/>
               <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                  <VBox fx:id="messagesContainer" spacing="10.0" style="-fx-padding: 15;">
                     <!-- Messages will be loaded dynamically -->
                  </VBox>
               </ScrollPane>
            </VBox>
            <VBox spacing="10.0" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
               <Label text="Send New Message" style="-fx-font-weight: bold;"/>
               <TextArea fx:id="messageTextArea" prefRowCount="5" VBox.vgrow="ALWAYS"/>
               <HBox spacing="10.0" alignment="CENTER_RIGHT">
                  <Button fx:id="sendButton" text="Send Message" onAction="#handleSendMessage" defaultButton="true"/>
               </HBox>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>

