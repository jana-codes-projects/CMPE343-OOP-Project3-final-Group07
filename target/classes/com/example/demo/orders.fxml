<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controllers.OrdersController">
   <top>
      <HBox spacing="10.0" style="-fx-padding: 10;">
         <Label text="My Orders" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
         <Button fx:id="closeButton" text="Close" onAction="#handleClose"/>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox fx:id="ordersContainer" spacing="15.0" style="-fx-padding: 15;">
            <!-- Orders will be loaded dynamically -->
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>

